<div class="row">
  <div class="col s12 m8">
    <h3>{{story.title}}
      <small>{{{editIcon story.user user story._id false}}}</small>
    </h3>
    <div class="card story">
      <div class="card-content">
        <span class="card-title">{{formatDate
            story.createdAt
            "YYYY년 M월 D일 h:mm:ss a"
          }}</span>
        {{{story.body}}}
      </div>
      <div class="card-action">
        <button class="section">
          <a onclick="window.location.reload();">Click to LIKE</a>
        </button>
        <div class="section" style="height: 40px;">
          <i class="fas fa-heart"></i>
          {{#if story.likes}}
            {{{story.likes.length}}} Likes
          {{else}}
            No Likes
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</div>
